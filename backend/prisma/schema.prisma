generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model users{
  id String @id @default(uuid()) @unique
  first_name String @db.VarChar(255)
  last_name String @db.VarChar(255)
  email String @unique @db.VarChar(255)
  password String 
  gender String
  age String 
  addresses address[]
  cart cart?
  orders order[]
  orser_session order_session[]
  payment payments[]
}

model address {
  id String @id @default(uuid()) @unique
  house_no String
  street String
  land_mark String
  city String
  state String
  pin_code String
  user_id String
  user users @relation(fields: [user_id] , references: [id])
  order order[]
}

model products {
  id String @id @default(uuid()) @unique
  product_name String
  product_description String
  images product_images[]
  cart_products cart_products[]
  ordered_products ordered_products[]
  product_sizes product_variants[]
}

model product_variants {
  id String @id @default(uuid()) @unique
  product_id String
  price Int
  quantity Int
  color String @default("")
  size String @default("")
  product products @relation(fields: [product_id] , references: [id])
  cart cart_products?
  @@unique([product_id , size,color])
}

model product_images {
  id String @id @default(uuid()) @unique
  image_url String
  product_id String
  product products @relation(fields: [product_id] , references: [id])
}

model cart {
  id String @id @default(uuid())
  user_id String @unique
  user users @relation(fields: [user_id], references: [id])
  cart_products cart_products[]
  order order[]
}

model cart_products {
  cart_id String
  product_id String
  product_variant_id String @unique
  qunatity Int
  price Int
  products products @relation(fields: [product_id] , references: [id])
  cart cart @relation(fields: [cart_id], references: [id])
  product product_variants @relation(fields: [product_variant_id] , references: [id])
  @@id([cart_id , product_id])
}

model order{
  id String @id @default(uuid())
  user_id String
  cart_id String
  address_id String
  status String
  user users @relation(fields: [user_id] , references: [id])
  cart cart @relation(fields: [cart_id] , references: [id])
  address address @relation(fields: [address_id] , references: [id])
  ordered_product ordered_products[]
  order_session order_session?
  payment payments?
}

model ordered_products {
  product_id String
  order_id String 
  price Int
  qunatity Int
  product products @relation(fields: [product_id] , references: [id])
  order order @relation(fields: [order_id] , references: [id])
  @@id([product_id , order_id])
}

model order_session {
  id String @id @default(uuid())
  order_id String @unique
  user_id String
  initiated_at DateTime
  closed_at DateTime
  completed Boolean
  user users @relation(fields: [user_id] , references: [id])
  order order @relation(fields: [order_id] , references: [id])
}

model payments {
  id String @id @default(uuid())
  order_id String @unique
  stripe_id String @unique
  user_id String 
  amount Int
  completed Boolean
  created_at DateTime
  order order @relation(fields: [order_id] , references: [id])
  user users @relation(fields: [user_id] , references: [id])
}






